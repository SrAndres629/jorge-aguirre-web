# =================================================================
# WEB SERVER
# =================================================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# =================================================================
# DATABASE (Supabase PostgreSQL)
# =================================================================
DATABASE_URL=postgresql://user:password@host:port/database
# Ejemplo: postgresql://postgres.xxxxx:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# =================================================================
# META MARKETING API (Facebook CAPI)
# =================================================================
META_PIXEL_ID=1234567890
META_ACCESS_TOKEN=EAAB...your_access_token_here
TEST_EVENT_CODE=TEST1234  # Nota: Nombre corregido (antes META_TEST_EVENT_CODE)

# =================================================================
# WHATSAPP (Evolution API)
# =================================================================
# Variables usadas por n8n o referencia global (no usadas directamente por FastAPI)
EVOLUTION_API_URL=http://evolution_api:8080
EVOLUTION_API_KEY=your_api_key_here
WHATSAPP_NUMBER=59164714751
# ADMIN KEY (Para panel /admin)
ADMIN_KEY=Andromeda2025

# =================================================================
# n8n AUTOMATION
# =================================================================
# URL interna (Docker) o pública
N8N_WEBHOOK_URL=http://n8n:5678/webhook/website-events
N8N_WEBHOOK_SECRET=your_webhook_secret_here

